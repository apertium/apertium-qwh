[
	! Unify apostrophe styles
	[ ?* [ ' (->) [ %` | ʻ | ’ | ‘ | ʼ ] ] ?* ]

	! Accept diacritics as double vowels
	[ ?* [ ä (->) [ a a ] ] ?* ] .o.
	[ ?* [ ë (->) [ e e ] ] ?* ] .o.
	[ ?* [ ï (->) [ i i ] ] ?* ] .o.
	[ ?* [ ö (->) [ o o ]	] ?* ] .o.
	[ ?* [ ü (->) [ u u ] ] ?* ] .o.
	[ ?* [ Ä (->) [ A A ] ] ?* ] .o.
	[ ?* [ Ë (->) [ E E ] ] ?* ] .o.
	[ ?* [ Ï (->) [ I I ] ] ?* ] .o.
	[ ?* [ Ö (->) [ O O ] ] ?* ] .o.
	[ ?* [ Ü (->) [ U U ]	] ?* ] .o.
	! Accept c instead of k
	[ ?* [ k (->) c	 ] ?* ] .o.
]
